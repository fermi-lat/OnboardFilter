macro OnboardFilter_cppflags "" \
   Linux "-DGLEAM -D__i386"\
   WIN32 "/D GLEAM /D__i386"

macro OnboardFilter_cflags $(OnboardFilter_cppflags)

macro headers "" WIN32 "*.h"#the following prepend for local includes
macro_prepend includes "-I ../src -I ../DFC  " WIN32 " /I ..\src  /I ..\DFC "


macro_prepend includes "-I ../src " WIN32 " /I ..\src  "

library OnboardFilter $(headers) *.cxx *.c Dll/*.cxx

