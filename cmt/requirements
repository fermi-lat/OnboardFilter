macro_prepend includes "-I ../src -I ../flight/EFC -I ../flight/EDS -I ../flight/EDS/src -I ../flight/EFC/src " 
WIN32 " /I ..\src  /I ..\flight\EFC /I ..\flight\EDS /I ..\flight\EDS\src /I ..\flight\EFC\src "


library OnboardFilter $(headers) *.cxx *.c Dll/*.cxx ../flight/EFC/src/A*.c ../flight/EFC/src/E*.c ../flight/EFC/src/T*.c ../flight/EDS/src/E*.c ../flight/EDS/src/T*.c ../flight/EDS/src/io/E*.c ../flight/EDS/src/io/L*.c 

